@model VolonterUA.Models.ViewModels.Personal.SignUpVolonterPageViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (@Html.BeginForm())
{

    @Html.LabelFor(model => model.ValidationModel.UserLoginDataModel.Login)
    @Html.EditorFor(model => model.ValidationModel.UserLoginDataModel.Login)
    @Html.ValidationMessageFor(model => model.ValidationModel.UserLoginDataModel.Login, Model.Localization.LoginErrorMessage)

    @Html.LabelFor(model => model.ValidationModel.UserLoginDataModel.Password)
    @Html.EditorFor(model => model.ValidationModel.UserLoginDataModel.Password)
    @Html.ValidationMessageFor(model => model.ValidationModel.UserLoginDataModel.Password, Model.Localization.PasswordErrorMessage)

    @Html.LabelFor(model => model.ValidationModel.UserLoginDataModel.UserInfo.FirstName)
    @Html.EditorFor(model => model.ValidationModel.UserLoginDataModel.UserInfo.FirstName)
    @Html.ValidationMessageFor(model => model.ValidationModel.UserLoginDataModel.UserInfo.FirstName, Model.Localization.FirstNameErrorMessage)

    @Html.LabelFor(model => model.ValidationModel.UserLoginDataModel.UserInfo.LastName)
    @Html.EditorFor(model => model.ValidationModel.UserLoginDataModel.UserInfo.LastName)
    @Html.ValidationMessageFor(model => model.ValidationModel.UserLoginDataModel.UserInfo.LastName, Model.Localization.LastNameErrorMessage)

    @Html.LabelFor(model => model.ValidationModel.UserLoginDataModel.UserInfo.PhoneNumber)
    @Html.EditorFor(model => model.ValidationModel.UserLoginDataModel.UserInfo.PhoneNumber)
    @Html.ValidationMessageFor(model => model.ValidationModel.UserLoginDataModel.UserInfo.PhoneNumber, Model.Localization.PhoneNumberErrorMessage)

    <input type="submit" value="Register" />
}