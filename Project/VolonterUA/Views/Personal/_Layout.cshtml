<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <style type="text/css">
        .field-validation-valid {
            display: none;
        }

        .validation-summary-valid {
            display: none;
        }

        .field-validation-error {
            display: block;
            color: #f00;
        }

        .validation-summary-errors {
            color: #f00;
            font-weight: bold;
        }

        .input-validation-error {
            border: 2px solid #f00;
            background-color: #fee;
        }

        input[type="checkbox"].input-validation-error {
            outline: 2px solid #f00;
        }

        dl{
            margin: 0;
        }

        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        #Header {
            display: flex;
            justify-content: space-between;
            background-color: ghostwhite;
            width: 100%;
            height: 40px;
        }

        #logoHref {
            width: 200px;
            height: 100%;

            background-image: url("@Url.Content("~/Content/Images/Logo.png")");
            background-repeat: no-repeat;
            background-size: cover;
        }
        #logoHref > a {
            width: 100%;
            height: 100%;
            display: inline-block;
        }

        #Main {
            width: 100%;

            display: flex;
            align-items: center;
            justify-content: center;
            flex-grow: 1;

            background-image: url("@Url.Content("~/Content/Images/TwoHelpHands.jpg")");
            background-repeat: no-repeat;
            background-size: cover;
        }

        .label {
            display: block;
            font-size: large;
            text-align: center;
            color: black;
        }

        .text-box {
            box-sizing: border-box;
            width: 100%;
        }

        .inp {
            box-sizing: border-box;
            width: 100%;
        }

        #password {
            box-sizing: border-box;
            width: 100%;
        }

        form {
            width: 20%;
            background-color: hsla(57, 92%, 73%, 0.92);
        }

        form > div{
            padding: 20px;
        }

        form > div > div {
            padding: 5px;
        }

        .blockslist {
            height: 35%;
            width: 100%;
            display: flex;
            flex-direction: row;
            align-content: start;
            overflow-x: scroll;
        }

        .eventblock {
            background-color: hsla(57, 92%, 73%, 0.92);
            width: 265px;
            padding-left: 5px;
            margin-top: 5px;
            margin-right: 5px;
            border: solid black 1px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .eventblock > dl > dd {
            display: -webkit-box;
           -webkit-box-orient: vertical;
           -webkit-line-clamp: 3;
           overflow: hidden;
        }

        .eventblock div
        {
            text-align: right;
        }

        .eventblock div span
        {
            padding-right: 5px;
            display: block;
            font-size: small;
            overflow-x: hidden;
            text-overflow: clip;
            white-space: nowrap;
        }

        #MainWrapper {
            height: 90%;
            width: 90%;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            background-color: hsla(57, 92%, 86%, 0.92);
            padding: 10px;
            padding-left: 20px;
            padding-right: 20px;
            min-width: 750px;
            min-height: 630px;
        }

    </style>

    @Scripts.Render("~/jQuery")
    @Scripts.Render("~/jQueryValidate")
    @Scripts.Render("~/Unobtrusive")
    @Scripts.Render("~/AdultHoodValidation")
</head>
<body>
    @RenderBody()
</body>
</html>